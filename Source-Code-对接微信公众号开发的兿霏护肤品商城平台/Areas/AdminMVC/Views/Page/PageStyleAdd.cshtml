@using ZoomLa.Controls
@using ZoomLa.AppCode.Controls
@model ZoomLa.Model.M_PageStyle
@{

}
@section head{<title>黄页样式</title>}
@section content{
<div class="container-fluid mysite" id="BreadDiv">
    <div class="row">
        <ol class="breadcrumb navbar-fixed-top" id="BreadNav">
            <li><a href='@(CustomerPageAction.customPath2)Main.aspx'>工作台</a></li>
            <li><a href="PageStyle">样式列表</a></li>
            <li class='active'>样式管理</li>
        </ol>
    </div>
</div>
<form method="post" action="@MVCHelper.GetAction("Style_Add",Request)">
<table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <td class="td_m"><strong>样式名称：</strong></td>
                <td>
                    <input type="text" id="PageNodeName" name="PageNodeName" class="form-control text_300 required" value="@Model.PageNodeName"  /><span class="rd_red">*</span>
                </td>
            </tr>
            <tr>
                <td><strong>样式目录：</strong></td>
                <td>
                    <input type="text" id="StylePath" name="StylePath" class="form-control text_300 required" value="@Model.StylePath" />
                    <span class="rd_red">*</span>
                    <span>模板实际路径为:样式目录+黄页栏目所选模板</span>
                </td>
            </tr>
            <tr>
                <td><strong>首页模板：</strong></td>
                <td>
                    @MvcHtmlString.Create(PageCommon.GetTlpDP("TemplateIndex"))
                    <input type="hidden" name="TemplateIndex_hid" id="TemplateIndex_hid" value="@Model.TemplateIndex" />
                </td>
            </tr>
            <tr>
                <td><strong>模板预览：</strong></td>
                <td>
                    @Html.Partial("C_SFileUP", new C_SFileUP { FileType = "img", ID = "TemplateIndexPic",Value=Model.TemplateIndexPic })
                </td>
            </tr>
            <tr id="Tr3">
                <td>
                    <strong>排列顺序：</strong></td>
                <td>
                    <input type="text" class="form-control text_300" id="orderid" name="orderid" value="@Model.Orderid" /><span class="r_red">升序排序,越小越前</span>
                </td>
            </tr>
            <tr><td></td>
                <td>
                    @*<asp:Button ID="Button1" class="btn btn-primary" runat="server" Text="保存" OnClientClick="checkdata()" OnClick="Button1_Click" />*@
                    <input type="submit" class="btn btn-primary" value="保存信息">
                    <a href="PageStyle" class="btn btn-primary">返回列表</a>
                </td>
            </tr>
        </tbody>
    </table>
</form>
@Html.Partial("C_TlpDP", new C_TlpDP("TemplateIndex",""))
}
@section script{
<script src="/JS/Controls/ZL_Dialog.js"></script>
<script src="/JS/DatePicker/WdatePicker.js"></script>
<script>
    $(function () {
        Tlp_initTemp();
        $("form").validate({});
    })
</script>
}