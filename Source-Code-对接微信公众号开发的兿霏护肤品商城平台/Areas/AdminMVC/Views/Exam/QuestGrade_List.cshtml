@using System.Data
@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 
    Model.cols = 4;
}
<div id="EGV">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td class="td_s"></td>
            <td class="td_s">ID</td>
            <td>@(ViewBag.cateName)名称</td>
            <td width="30%">操作</td>
        </tr>
        @foreach (DataRow dr in Model.dt.Rows)
        {
            <tr>
                <td><input type="checkbox" value="@dr["GradeID"]" data-name="@dr["GradeName"]" name="idchk" /></td>
                <td>@dr["GradeID"]</td>
                <td>@dr["GradeName"]</td>
                <td>
                    <a href="javascript:;" onclick="ShowGrade(@dr["GradeID"],'@dr["GradeName"]')" class="option_style"><i class="fa fa-pencil"></i>修改</a>
                    <a href="QuestList?@ViewBag.paraName=@dr["GradeID"]" class="option_style"><i class="fa fa-list-alt"></i>试题管理</a>
                    <a href="javascript:;" onclick='mvcpage.del({url: "QuestGrade_Del", id: @dr["GradeID"], confirm: "是否确认删除"});' class="option_style"><i class="fa fa-trash-o"></i>删除</a>
                </td>
            </tr>
        }
        @Html.Partial("_page", Model)
    </table>
</div>