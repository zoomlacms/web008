@model ZoomLa.Model.Shop.M_Shop_DeliveryMan
@{
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{<title>添加送货人</title> }
@section content{
<div id="pageflag" data-nav="shop" data-ban="store"></div>
<div class="container margin_t5">
    <ol class="breadcrumb">
        <li><a title="会员中心" href="/User/Default">会员中心</a></li>
        <li><a href="ProductList">我的店铺</a></li>
        <li><a href="DeliveryMan">送货人管理</a></li>
        <li class="active">添加送货人</li>
    </ol>
</div>
<div class="container">
    <form method="post" action="@MVCHelper.GetAction("DeliveryMan_Add",Request)">
        <table class="table table-bordered table-striped">
            <tr>
                <td class="text-right td_m">用户名/ID：</td>
                <td>
                    <input type="text" id="user" name="user" class="form-control text_300 required" value="@(Model.ID>0 ? Model.UserID.ToString() :"")" placeholder="请输入用户名或ID" />
                </td>
            </tr>
            <tr>
                <td class="text-right">权限：</td>
                <td>
                    <label>@Html.CheckBox("auth", Model.Auth.Contains("settle"), new { value = "settle" })结款</label>
                </td>
            </tr>
            <tr>
                <td class="text-right">备注：</td>
                <td>
                    <textarea id="Remind" name="Remind" class="form-control m715-50" style="height:80px;">@Model.Remind</textarea>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit" class="btn btn-primary">保存信息</button>
                </td>
            </tr>
        </table>
</form>
</div>
}
@section script{
    <link type="text/css" href="/dist/css/bootstrap-switch.min.css" rel="stylesheet" />
    <script src="/dist/js/bootstrap-switch.js"></script>
}
